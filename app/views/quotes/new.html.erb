
<%= flash_messages %>
<%= form_for @quote do |f| %>

<!-- Building Type Selection -->
<br>
<div class="heading-title heading-dotted text-center">
  <h2>Quote Form</h2>
</div>
<center>
      <label for="buildingtype"><strong>Select the Building Type</strong></label>
      <select id="selectator" name="buildingType">
          <option value="">Select an Option</option>
          <option value="residential">Residential</option>
          <option value="commercial">Commercial</option>
          <option value="corporate">Corporate</option>
          <option value="hybrid">Hybrid</option>
  </select>
  <br>
</center>

<!-- Residential -->
 
  <div id="residential" class="building_type" onkeyup= "residentialcalculator()">
    <br><br>
    <div class="heading-title heading-dotted text-center">
      <h2>Residential Building Form</h2>
    </div>
    
<div class="row">
    <div class="col-md-4">
      <center>
      <label for="building-appartments"><strong>How many appartments are in the building?</strong>
      </label>
      <input name= 'ResidentialApartmentNumbers' type="number" id="res1"></center>
      </div>
      <div class="col-md-4">
        <center>
      <label for="building-stories"><strong>How many stories are in the building?</strong>
      </label>
      <input name= 'ResidentialNumberOfFloors' type="number" id="res2"></center>
    </div>
    <div class="col-md-4">
      <center>
      <label for="building-basements"><strong>How many basements in the building?</strong>
      </label>
      <input name= 'ResidentialNumberOfBasements' type="number" id="res3"></center>
    </div><br><br>
 </div>
</div>


